---
// https://docs.astro.build/en/guides/view-transitions/
import { ClientRouter } from 'astro:transitions';
import Navigation from '@/components/Navigation.astro';
import '@/assets/app.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="lt">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- Google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
            rel="stylesheet"
        />

        <title>{title} | chemija.org</title>
        <ClientRouter />
        <Analytics />
    </head>
    <body>
        <div class="min-h-screen flex flex-col bg-white">
            <Navigation />
            <main class="flex-grow">
                <slot />
            </main>
            <footer class="bg-neutral-50 border-t border-neutral-200 py-12">
                <div
                    class="max-w-[1400px] mx-auto px-6 sm:px-12 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6"
                >
                    <div>
                        <p
                            class="text-xs font-medium tracking-wider uppercase text-neutral-500 mb-2"
                            style="font-family: 'IBM Plex Mono', 'Space Mono', monospace; letter-spacing: 0.05em;"
                        >
                            CHEMIJA.ORG
                        </p>
                        <p class="text-xs text-neutral-400">
                            © {new Date().getFullYear()} Visos teisės saugomos
                        </p>
                    </div>
                    <div class="flex flex-col items-start sm:items-end gap-2">
                        <p
                            class="text-xs font-medium tracking-wider uppercase text-neutral-500"
                            style="font-family: 'IBM Plex Mono', 'Space Mono', monospace; letter-spacing: 0.05em;"
                        >
                            SUKŪRĖ
                        </p>
                        <p class="text-xs text-neutral-400">Lukas Vá</p>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>
