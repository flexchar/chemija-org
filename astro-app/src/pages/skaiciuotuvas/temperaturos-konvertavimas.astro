---
import Layout from '@/layouts/Layout.astro';
import TemperatureConverter from '@/components/math/TemperatureConverter.jsx';

const schema = {
    '@context': 'https://schema.org',
    '@type': 'WebApplication',
    name: 'Temperatūros konvertavimas',
    description:
        'Konvertuokite temperatūrą tarp Celsijaus, Kelvino ir Farenheito skalių. Greitas ir tikslus temperatūros skaičiuotuvas.',
    applicationCategory: 'EducationalApplication',
    operatingSystem: 'Any',
    offers: {
        '@type': 'Offer',
        price: '0',
        priceCurrency: 'EUR',
    },
};

// Get URL parameters for pre-filling
const url = new URL(Astro.request.url);
const celsius = url.searchParams.get('celsius');
const kelvin = url.searchParams.get('kelvin');
const fahrenheit = url.searchParams.get('fahrenheit');
---

<Layout
    title="Temperatūros konvertavimas"
    description="Konvertuokite temperatūrą tarp Celsijaus, Kelvino ir Farenheito skalių. Greitas ir tikslus temperatūros skaičiuotuvas chemijos mokslams."
    schema={schema}
>
    <div class="max-w-[900px] mx-auto px-6 sm:px-12 py-16">
        <!-- Breadcrumbs -->
        <nav class="mb-8 text-xs text-neutral-500" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2" style="font-family: 'IBM Plex Mono', monospace;">
                <li><a href="/" class="hover:text-black transition-colors">PRADŽIA</a></li>
                <li>/</li>
                <li>
                    <a
                        href="/skaiciuotuvas"
                        class="hover:text-black transition-colors"
                    >
                        SKAIČIUOTUVAI
                    </a>
                </li>
                <li>/</li>
                <li class="text-neutral-900">TEMPERATŪROS KONVERTAVIMAS</li>
            </ol>
        </nav>

        <header class="mb-12">
            <h1
                class="text-2xl sm:text-3xl font-medium tracking-wider uppercase mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.1em;"
            >
                TEMPERATŪROS KONVERTAVIMAS
            </h1>
            <div class="h-px bg-neutral-200 mb-6"></div>
            <p class="text-sm text-neutral-600 leading-relaxed">
                Konvertuokite temperatūrą tarp Celsijaus (°C), Kelvino (K) ir
                Farenheito (°F) skalių. Įrašykite reikšmę į bet kurį laukelį.
            </p>
        </header>

        <div
            class="bg-white border border-neutral-200 p-8"
            style="border-radius: 4px;"
        >
            <TemperatureConverter
                client:load
                initialCelsius={celsius}
                initialKelvin={kelvin}
                initialFahrenheit={fahrenheit}
            />
        </div>

        <!-- Examples section -->
        <div
            class="mt-8 bg-neutral-50 border border-neutral-200 p-6"
            style="border-radius: 4px;"
        >
            <h2
                class="text-xs font-medium tracking-wider uppercase text-neutral-700 mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.05em;"
            >
                PAVYZDŽIAI
            </h2>
            <div class="space-y-4 text-sm text-neutral-600">
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 1: Kambario temperatūra
                    </p>
                    <p>
                        Užduotis: 25°C į Kelviną<br />
                        Sprendimas: K = 25 + 273.15 = <strong>298.15 K</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 2: Vandens virimo taškas
                    </p>
                    <p>
                        Užduotis: 100°C į Farenheitą<br />
                        Sprendimas: °F = (100 × 9/5) + 32 = <strong>212°F</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 3: Absoliutus nulis
                    </p>
                    <p>
                        Užduotis: 0 K į Celsijų<br />
                        Sprendimas: °C = 0 - 273.15 = <strong>-273.15°C</strong>
                    </p>
                </div>
            </div>
        </div>

        <!-- Formula reference -->
        <div
            class="mt-8 bg-neutral-50 border border-neutral-200 p-6"
            style="border-radius: 4px;"
        >
            <h2
                class="text-xs font-medium tracking-wider uppercase text-neutral-700 mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.05em;"
            >
                FORMULĖS
            </h2>
            <div class="space-y-2 text-sm text-neutral-600">
                <p>K = °C + 273.15</p>
                <p>°F = (°C × 9/5) + 32</p>
                <p>°C = (°F - 32) × 5/9</p>
            </div>
        </div>
    </div>
</Layout>
