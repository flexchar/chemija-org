---
import Layout from '@/layouts/Layout.astro';
import QuadraticCalculator from '@/components/math/QuadraticCalculator.jsx';

const schema = {
    '@context': 'https://schema.org',
    '@type': 'WebApplication',
    name: 'Kvadratinių lygčių skaičiuotuvas',
    description:
        'Išspręskite kvadratines lygtis formos ax² + bx + c = 0. Įveskite koeficientus a, b ir c.',
    applicationCategory: 'EducationalApplication',
    operatingSystem: 'Any',
    offers: {
        '@type': 'Offer',
        price: '0',
        priceCurrency: 'EUR',
    },
};

const url = new URL(Astro.request.url);
const a = url.searchParams.get('a');
const b = url.searchParams.get('b');
const c = url.searchParams.get('c');
---

<Layout
    title="Kvadratinių lygčių skaičiuotuvas"
    description="Išspręskite kvadratines lygtis formos ax² + bx + c = 0. Automatiškai apskaičiuoja diskriminantą ir sprendimus."
    schema={schema}
>
    <div class="max-w-[900px] mx-auto px-6 sm:px-12 py-16">
        <!-- Breadcrumbs -->
        <nav class="mb-8 text-xs text-neutral-500" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2" style="font-family: 'IBM Plex Mono', monospace;">
                <li><a href="/" class="hover:text-black transition-colors">PRADŽIA</a></li>
                <li>/</li>
                <li>
                    <a
                        href="/skaiciuotuvas"
                        class="hover:text-black transition-colors"
                    >
                        SKAIČIUOTUVAI
                    </a>
                </li>
                <li>/</li>
                <li class="text-neutral-900">KVADRATINIŲ LYGČIŲ SKAIČIUOTUVAS</li>
            </ol>
        </nav>

        <header class="mb-12">
            <h1
                class="text-2xl sm:text-3xl font-medium tracking-wider uppercase mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.1em;"
            >
                KVADRATINIŲ LYGČIŲ SKAIČIUOTUVAS
            </h1>
            <div class="h-px bg-neutral-200 mb-6"></div>
            <p class="text-sm text-neutral-600 leading-relaxed mb-4">
                Išspręskite kvadratines lygtis formos ax² + bx + c = 0. Įveskite
                koeficientus a, b ir c.
            </p>
        </header>

        <div
            class="bg-white border border-neutral-200 p-8"
            style="border-radius: 4px;"
        >
            <QuadraticCalculator client:load initialA={a} initialB={b} initialC={c} />
        </div>

        <!-- Examples section -->
        <div
            class="mt-8 bg-neutral-50 border border-neutral-200 p-6"
            style="border-radius: 4px;"
        >
            <h2
                class="text-xs font-medium tracking-wider uppercase text-neutral-700 mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.05em;"
            >
                PAVYZDŽIAI
            </h2>
            <div class="space-y-4 text-sm text-neutral-600">
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 1: Du skirtingi sprendiniai
                    </p>
                    <p>
                        Užduotis: x² - 5x + 6 = 0<br />
                        Diskriminantas: D = 25 - 24 = 1<br />
                        Sprendimas: <strong>x₁ = 3, x₂ = 2</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 2: Vienas sprendinys
                    </p>
                    <p>
                        Užduotis: x² - 4x + 4 = 0<br />
                        Diskriminantas: D = 16 - 16 = 0<br />
                        Sprendimas: <strong>x = 2</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 3: Nėra realių sprendinių
                    </p>
                    <p>
                        Užduotis: x² + x + 1 = 0<br />
                        Diskriminantas: D = 1 - 4 = -3<br />
                        Sprendimas: <strong>Nėra realių sprendinių</strong>
                    </p>
                </div>
            </div>
        </div>

        <!-- Formula reference -->
        <div
            class="mt-8 bg-neutral-50 border border-neutral-200 p-6"
            style="border-radius: 4px;"
        >
            <h2
                class="text-xs font-medium tracking-wider uppercase text-neutral-700 mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.05em;"
            >
                FORMULĖ
            </h2>
            <div class="space-y-2 text-sm text-neutral-600">
                <p>ax² + bx + c = 0</p>
                <p>x = (-b ± √(b² - 4ac)) / 2a</p>
                <p class="text-xs text-neutral-500 mt-4">
                    Diskriminantas: D = b² - 4ac
                </p>
            </div>
        </div>
    </div>
</Layout>
