---
import Layout from '@/layouts/Layout.astro';
import Balancer from '@/components/math/ChemicalBalancer.jsx';

const schema = {
    '@context': 'https://schema.org',
    '@type': 'WebApplication',
    name: 'Reakcijų lygintuvas',
    description:
        'Automatiškai subalansuokite chemines reakcijų lygtis. Įveskite reakcijos reagentus ir produktus.',
    applicationCategory: 'EducationalApplication',
    operatingSystem: 'Any',
    offers: {
        '@type': 'Offer',
        price: '0',
        priceCurrency: 'EUR',
    },
};

const url = new URL(Astro.request.url);
const equation = url.searchParams.get('equation');
---

<Layout
    title="Reakcijų lygintuvas"
    description="Automatiškai subalansuokite chemines reakcijų lygtis. Greitas ir patikimas chemijos reakcijų lyginimo įrankis."
    schema={schema}
>
    <div class="max-w-[900px] mx-auto px-6 sm:px-12 py-16">
        <!-- Breadcrumbs -->
        <nav class="mb-8 text-xs text-neutral-500" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2" style="font-family: 'IBM Plex Mono', monospace;">
                <li><a href="/" class="hover:text-black transition-colors">PRADŽIA</a></li>
                <li>/</li>
                <li>
                    <a
                        href="/skaiciuotuvas"
                        class="hover:text-black transition-colors"
                    >
                        SKAIČIUOTUVAI
                    </a>
                </li>
                <li>/</li>
                <li class="text-neutral-900">REAKCIJŲ LYGINTUVAS</li>
            </ol>
        </nav>

        <header class="mb-12">
            <h1
                class="text-2xl sm:text-3xl font-medium tracking-wider uppercase mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.1em;"
            >
                REAKCIJŲ LYGINTUVAS
            </h1>
            <div class="h-px bg-neutral-200 mb-6"></div>
            <p class="text-sm text-neutral-600 leading-relaxed mb-4">
                Automatiškai subalansuokite chemines reakcijų lygtis. Įveskite
                reakcijos reagentus ir produktus.
            </p>
            <div
                class="text-xs text-neutral-500 p-4 bg-neutral-50 border border-neutral-200"
                style="border-radius: 4px;"
            >
                <p class="mb-2">
                    <strong>Pastaba:</strong> Elektronai rašomi su ^ ženklu
                </p>
                <p>
                    Pavyzdys: Na<sup>+</sup> rašoma kaip Na^+
                </p>
            </div>
        </header>

        <div
            class="bg-white border border-neutral-200 p-8"
            style="border-radius: 4px;"
        >
            <Balancer client:load initialEquation={equation} />
        </div>

        <!-- Examples section -->
        <div
            class="mt-8 bg-neutral-50 border border-neutral-200 p-6"
            style="border-radius: 4px;"
        >
            <h2
                class="text-xs font-medium tracking-wider uppercase text-neutral-700 mb-4"
                style="font-family: 'IBM Plex Mono', monospace; letter-spacing: 0.05em;"
            >
                PAVYZDŽIAI
            </h2>
            <div class="space-y-4 text-sm text-neutral-600">
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 1: Vandens susidarymas
                    </p>
                    <p>
                        Užduotis: H2 + O2 → H2O<br />
                        Sprendimas: <strong>2H₂ + O₂ → 2H₂O</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 2: Degimas
                    </p>
                    <p>
                        Užduotis: CH4 + O2 → CO2 + H2O<br />
                        Sprendimas: <strong>CH₄ + 2O₂ → CO₂ + 2H₂O</strong>
                    </p>
                </div>
                <div>
                    <p class="font-medium text-neutral-900 mb-1">
                        Pavyzdys 3: Fotosintezė
                    </p>
                    <p>
                        Užduotis: CO2 + H2O → C6H12O6 + O2<br />
                        Sprendimas: <strong
                            >6CO₂ + 6H₂O → C₆H₁₂O₆ + 6O₂</strong
                        >
                    </p>
                </div>
            </div>
        </div>
    </div>
</Layout>
